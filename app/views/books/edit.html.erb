<h1>Editing Book</h1>
<%= form_with model: @book,  method: :patch do |f| %>
<!-- form_with部分-->
<p>Title</p>
<%= f.text_field :title %>


<p>Body</p>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>
<% end %>

<span>
<%= link_to "Show", "/books/#{@book.id}" %>
</span>
|
<span>
    <%= link_to "Back", "/books" %>
</span>
