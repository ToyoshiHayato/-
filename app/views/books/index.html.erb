<h1>Books</h1>

<table>
<thead>
 <tr>
    <th>Title</th>
    <th>Body</th>
 </tr>
</thead>

        <% @books.each do |book| %>
<tbody>
    <tr>
        <span><%= book.title %></span>
        
        <span><%= book.body %></span>
        <td>
            <span>
                <%= link_to "Show", "/books/#{@book.id}" %>
            </span>
        </td>   
        <td>
            <span>
                <%= link_to "Edit", "/books/#{@book.id}/edit" %>
            </span>
        </td>
        <td>
            <span>
                <%= link_to "Destroy", "/books" %>
            </span>
        </td>
    </tr>
  </tbody>
    <% end %>
    </table>
    

<h2>New book</h2>
<!-- form_with部分-->
<%= form_with model: Book.new do |f| %>
<p>Title</p>
<%= f.text_field :body %>

<p>Body</p>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>